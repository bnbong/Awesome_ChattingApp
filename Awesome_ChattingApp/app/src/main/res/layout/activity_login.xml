<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#102131"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/sw"
        />

    <EditText
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#7D8FA1"
        android:colorControlActivated="#00D9A7"
        android:colorControlNormal="#7D8FA1"
        android:ems="10"
        android:hint="닉네임"
        android:inputType="textPersonName"
        android:textColor="#7D8FA1"


        android:textColorHint="#7D8FA1"
        app:layout_constraintBottom_toBottomOf="@id/login_image"
        app:layout_constraintEnd_toEndOf="@id/login_image" />

    <Button
        android:id="@+id/enter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:text="시작하기"
        />

</RelativeLayout>
<!--login design 1-->


